rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for 'inquiries' collection
    match /inquiries/{inquiryId} {
      allow create: true; 
      allow read, update, delete: if isSignedIn();
    }
  }
}
